<html>

    <head>
        <%- include ../includes/_head.ejs %>
        <link rel="stylesheet" href="/public/stylesheet/button_style.css">
        <link rel="stylesheet" href="./public/stylesheet/login_style.css">
        
    </head>

    <body class="align-items-center justify-content-center d-flex">
        <div id="app" class="flip-card-3D-wrapper">
            <img class="logo" src="/public/images/logo.png" alt="">
            <div id="flip-card" class="">
                <div class="flip-card-front">
                    <div>
                        <div class="mt-5">
                            <h3 class="text-center">Login</h3>
                        </div>
                        <div class="my-3 d-flex justify-content-center">
                            <input class="form-control" id="email" type="email" placeholder="email" />
                        </div>
                        <div class="my-3 d-flex justify-content-center">
                            <input class="form-control" id="password" type="password" placeholder="password" />
                        </div>
                        <div class="d-flex justify-content-center mt-4 mb-1">
                            <button id="login-btn" style="cursor: pointer;" class=" button button--sacnite button--round-s button--inverted m-0 my-3">Login</button>                            
                        </div>
                        <div class="mb-3">
                            <span style="font-size:0.8rem;">Don't have an account yet ? </span><a id="flip-card-btn-turn-to-back" style="cursor: pointer;" class="">Register</a>
                        </div>
                    </div>
                </div>
                <div class="flip-card-back">
                    <div>
                        <div class="mt-5">
                            <h3 class="text-center">Register</h3>
                        </div>
                        <div class="my-3 d-flex justify-content-center">
                            <input class="form-control" id="register-email" type="" placeholder="email" />
                        </div>
                        <div class="my-3 d-flex justify-content-center">
                            <input class="form-control" id="register-password" type="password" placeholder="password" />
                        </div>
                        <div class="my-3 d-flex justify-content-center">
                            <input class="form-control" id="" type="password" placeholder="password" />
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <button id="register-btn" class="button button--sacnite button--round-s button--inverted m-0 my-3">Register</button>                            
                        </div>
                        <div class="mb-3">
                            <span style="font-size:0.8rem;">Back to  </span><a id="flip-card-btn-turn-to-front" style="cursor: pointer;" class="">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <%- include ../includes/_footer.ejs %>
            <script src="./public/javascript/flip_card.js"></script>
            <script src="./public/javascript/login.js"></script>
        </footer>
    </body>
