<html>

    <head>
        <%- include ../includes/_head%>
        <link rel="stylesheet" href="./public/stylesheet/creator_board_style.css">
    </head>

    <body>
        <div id="creator_board">
            <%- include('../includes/_header',{title:'{{ title }}',email:'{{ userInfo.email }}'})%>
            <div class="creator_body d-flex justify-content-center mt-5">
                <div class="col-md-8 col-sm-11 col-11">
                    <h4 class="text-light mb-3">Boards</h4>
                    <div class="row">
                        <div v-on:click="selectBoard(board.boardFk)" class="col-md-6 col-lg-3 col-6 my-2 px-1" v-for="(board,index) in userInfo.board_list">
                            <div class="card card_board">
                                <div class="card-title m-2">
                                    <h6 class="text-light">{{ board.name }}</h6>
                                    <h6 class="text-light">{{ board.boardFk }}</h6>
                                </div>
                                <div class="card-body">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>              
                <div style="position:absolute; top:0px; right:25px; width: 200px;">
                    <button class="btn-dark btn create-board" data-toggle="modal" data-target=".bd-example-modal-sm">+ CreateBoard</button>
                </div>
                
                <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-body">
                            <div class="form-group" >
                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>                            
                        </div>
                        <div class="">
                            <button @click="createBoard" type="button" class="btn btn-primary">Create Board</button>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
        <%- include ../includes/_footer%>
        <script src="./public/javascript/creator_board.js"></script>
    </body>

</html>