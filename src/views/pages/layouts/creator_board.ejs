<html>

    <head>
        <%- include ../includes/_head%>
        <link rel="stylesheet" href="./public/stylesheet/creator_board_style.css">
    </head>

    <body>
        <div id="creator_board">
            <%- include('../includes/_header',{title:'{{ title }}',email:'{{ user.email }}'})%>
            <div class="creator_body d-flex justify-content-center mt-5">
                <div class="col-2"></div>
                <div class="col-7">
                    <h4 class="text-light mb-3">Boards</h4>
                    <div class="row">
                        <div v-on:click="selectBoard()" class="col-md-3" v-for="(all_board,index) in all_boards">
                            <div class="card card_board">
                                <div class="card-title m-2">
                                    <h6 class="text-light">{{ all_board.name }}</h6>
                                </div>
                                <div class="card-body">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include ../includes/_footer%>
        <script src="./public/javascript/creator_board.js"></script>
    </body>

</html>